<%- include('../partials/user-headder') %>
<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow">Home</a>
                <span></span> Shop
                <span></span> Wishlist
            </div>
        </div>
    </div>
    <% if (wishlist.length > 0) { %> 
    
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive" id="wishlist">
                       
                         
                       
                        <table class="table shopping-summery text-center" >
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock Status</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody >
                                <% wishlist.forEach(element => { %>
                                  <tr>
                                    <td class="image product-thumbnail"><img src="/images/<%= element.wishlist.image[0] %>" alt="#"></td>
                                    <td class="product-des product-name">
                                        <h5 class="product-name"><a href="shop-product-right.html"><%= element.wishlist.name %></a></h5>
                                       </td>
                                    <td class="price" data-title="Price"><span><%= element.wishlist.price %></span></td>
                                    <td class="text-center" data-title="Stock">
                                        <span class="color3 font-weight-bold">In Stock</span>
                                    </td>
                                    <td class="text-right" data-title="Cart">
                                        <a class="btn btn-sm" onclick="addToCartFromWishlist('<%= element.wishlist._id%>')"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</a>
                                    </td>
                                    <td class="action" data-title="Remove"><a onclick="RemoveFormWishlist('<%= element.wishlist._id%>')"><i class="fi-rs-trash"></i></a></td>
                                </tr>
                               <% }) %>
                            </tbody>
                        </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </section>
    <% } else { %>
        <div class="col-12 text-center my-5">
            <h3 class="">Your wishlist is empty!ðŸ¥²</h3>
            <p class="mb-4 mt-2">Add items to it now.</p>
            <a class="btn" href="/"><i class="fi-rs-shopping-bag mr-10"></i>Return to shop</a>
          </div>
    
      <% } %>
</main>
<%- include('../partials/user-footer') %>