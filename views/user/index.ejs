<%- include('../partials/user-headder') %>




<main class="main">
  <section class="home-slider position-relative mb-30">
      <div class="container">
        <div class="main-categori-wrap d-none d-lg-block">
            <a class="categori-button-active" href="#">
                <span class="fi-rs-apps"></span> Browse Categories
            </a>
            <div class="categori-dropdown-wrap categori-dropdown-active-large">
                  <ul>
                      <% if (categories) { %>
                       
                      
                      <% categories.forEach(element => { %>
                          <li ><a href="/filter-category/<%= element.catName %>"><i class="evara-font-cpu"></i><%= element.catName %></a> </li> 
                          
                      <% }) %>
                     <% } %>
                      
                  </ul>
                  
              </div>
          </div>
          <div class="home-slide-cover bg-grey- mt-30" >
              <div class="hero-slider-1 style-4 dot-style-1 dot-style-1-position-1">
                <% if (banners) { %>
                 
                    <% banners.forEach(element => { %>
                     <div class="col-lg-7 col-md-6">
                  <div class="single-hero-slider single-animation-wrap">
                    
                      <div class="container" style="padding:0px;">
                          <div class="row align-items-center slider-animated-1">
                             
                              
                                  <div class="single-slider-img single-slider-img-1">
                                      <img class="animated" src="/images/<%= element.banners%> " alt="">
                                  </div>
                              </div>
                          </div>
                      </div>
                    </div>  
                  <% }) %>
                   
                 <% } %>
              </div>
              <div class="slider-arrow hero-slider-1-arrow"></div>
          </div>
      </div>
  </section>


  <section >
    <div class="container ">
        <h3 class="section-title  wow fadeIn animated"><span>Featured</span> Brands</h3>
        <div class="carausel-6-columns-cover position-relative wow fadeIn animated" >
            <div class="slider-arrow slider-arrow-2 carausel-6-columns-arrow" id="carausel-6-columns-3-arrows"></div>
            <div class="carausel-6-columns text-center" id="carausel-6-columns-3">
                <% brands.forEach(element => { %>
                  <div class="brand-logo">
                   <a href="filter-brand/<%= element.brandName %>"> <img class="img-grey-hover" style="max-width:100px;" src="/images/<%= element.image %> " alt=""></a>
                    
                </div>
                <% }) %>

               
 
            </div>
        </div>
    </div>
</section>



  <section class="product-tabs pt-25 pb-20 wow fadeIn animated">
      <div class="container">
        

          <div class="col">
             
              <div class="col-lg-12">
                
                  <div class="tab-content wow fadeIn animated" id="myTabContent">
                      <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
                          
                            <div class="row product-grid-4">
                              <% product.forEach(element => { %>


                              <div class="col-lg-3 col-md-3 col-12 col-sm-6">
                               

                                  <div class="product-cart-wrap mb-30">
                                      <div class="product-img-action-wrap">
                                          <div class="product-img product-img-zoom">
                                            <a href="product-details/<%= element._id %>">
                                                  <img class="default-img" src="/images/<%= element.image[0] %>" alt="">
                                                  <img class="hover-img" src="/images/<%= element.image[0] %>" alt="">
                                              </a>
                                          </div>
                                          
                                          <div class="product-badges product-badges-position product-badges-mrg">
                                              <span class="hot">Hot</span>
                                          </div>
                                      </div>
                                      <div class="product-content-wrap">
                                          <div class="product-category">
                                              <a href="shop-grid-right.html"><%= element.category %> </a>
                                          </div>
                                          <h2> <a href="product-details/<%= element._id %>"><%= element.name %> </a></h2>
                                          <div class="rating-result" title="90%">
                                              <span>
                                                  <span>90%</span>
                                              </span>
                                          </div>
                                          <div class="product-price">
                                              <span>₹<%= element.price %> </span>
                                              <span class="old-price">₹<%= element.regularPrice%></span>
                                          </div>
                                          <div class="product-action-1 show">
                                             <% if (locals.user) { %>      
                                                <a aria-label="Add To Wishlist" class="action-btn hover-up" onclick="addToWishlist('<%= element._id%>')" id="addtowish"><i class="fi-rs-heart"></i></a>
                                                <a aria-label="Add To Cart" class="action-btn hover-up"  onclick="addToCart('<%= element._id%>')" id="addtoCart"><i class="fi-rs-shopping-bag-add"></i></a>
                                            <% } else { %>
                                                <a aria-label="Add To Wishlist" href="/login" class="action-btn hover-up"><i class="fi-rs-heart"></i></a>
                                              <a href="/login" aria-label="Add To Cart" class="action-btn hover-up" ><i class="fi-rs-shopping-bag-add"></i></a>
                                              <% }%>
                                           </div>
                                      </div>
                                  </div>

                                  
                              </div>
                            <% }) %>
                           
                              </div>  
                          <!--End product-grid-4-->
                      
                      <!--En tab one (Featured)-->
                      
                      <!--En tab two (Popular)-->
                      
                      <!--En tab three (New added)-->
                  </div>
                  <!--End tab-content-->
              </div>
          </div>


          
      </div>
  </section>
  
  
  
 
</main>


<%- include('../partials/user-footer') %>