<%- include('../partials/admin-headder') %>
<html>

<body>

  <section class="content-main">
    <form action="/admin/add-banner/"  required enctype="multipart/form-data" method="post">
      <div class="row">
        <div class="col-9">
          <div class="content-header">
            <h2 class="content-title">Banner</h2>
           
          </div>
        </div>
        <div class="col-lg-6">
          <div class="card mb-4">
            <div class="card-header">
              <h4>Basic</h4>
            </div>
            <div class="card-body">

              <div class="mb-4">
                <label for="product_name" class="form-label">Banner title</label>
                <input type="text" placeholder="Type here" required name="title"  class="form-control" id="product_name">
              </div>
              <div class="mb-4">
                <label class="form-label">Description</label>
                <input placeholder="Type here"   required name="discription" class="form-control" rows="4"></input>
              </div>
              <div class="row">
                <div class="col-lg-4">
                
                </div>

              
              </div>

            </div>
          </div> <!-- card end// -->

        </div>


        <div class="col-lg-3">
          <div class="card mb-4">
            <div class="card-header">
              <h4>Media</h4>
            </div>
            <div class="card-body">
              <div class="input-upload">
                <div>   
                 </div>
                 <input name="images" required accept="image/*" class="form-control" id="file-input" type="file">
              </div>
            </div>
          </div> <!-- card end// -->
          
        </div>

        <div class="col-9">
            <div class="content-header">
              <div>
                <button type="submit" class="btn btn-md rounded font-sm hover-up">Publich</button>
              </div>
            </div>
          </div>

    </form>

    <div class="card-body">
        <div class="table-responsive">
            <div class="table-responsive" id="banners">
                <table class="table align-middle table-nowrap mb-0">
                    <thead class="table-light">
                        <tr>
                        
                            <th class="align-middle" scope="col">Image</th>
                            <th class="align-middle" scope="col">Title</th>
                            <th class="align-middle" scope="col">discription</th>
                            <th class="align-middle" scope="col">Delete</th>

                        
                        </tr>
                    </thead>
                    <tbody>
                        <% if (banners) { %>
                         
                        <% banners.forEach(element => { %>
                        <tr>
                            <td><img src="/images/<%= element.banners %> " style="max-width:150px;"></td>
                            <td><%= element.bannerTitle%> </td>
                            <td><%= element.bannerDiscription %> </td>
                            <td><a id="banner-delete" onclick="deleteBanner('<%= element._id %>')">delete</a></td>
                        </tr> 
                        <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div> <!-- table-responsive end// -->
    </div>
</div>
    </div>
  </section> <!-- content-main end// -->

  </main>
  <script src="/admin-assets/js/vendors/jquery-3.6.0.min.js"></script>
  <script src="/admin-assets/js/vendors/bootstrap.bundle.min.js"></script>
  <script src="/admin-assets/js/vendors/select2.min.js"></script>
  <script src="/admin-assets/js/vendors/perfect-scrollbar.js"></script>
  <script src="/admin-assets/js/vendors/jquery.fullscreen.min.js"></script>
  <script src="/admin-assets/js/vendors/chart.js"></script>
  <script src="/javascripts/ajaxRequests.js"></script>
  <!-- Main Scr/ipt -->
  <script src="/admin-assets/js/main.js" type="text/javascript"></script>
  <script src="/admin-assets/js/custom-chart.js" type="text/javascript"></script>
  <%- include('../partials/admin-footer') %>
</body>


