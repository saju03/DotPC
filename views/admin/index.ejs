            let Categories = []
            response.report .forEach(element => {
                Categories.push(element.category)
            });
            let sale = []
            response.report.forEach(element=>{
                sale.push(element.sale)
            })
            console.log(Categories);
            new Chart(ctx2, {
      type: 'bar',
      data: {
        labels:Categories,
        datasets: [{
          label: 'Category wise sale',
          data: sale,
          borderWidth: 1
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
        }
    }
   })
 });
  
   
  </script>
 
