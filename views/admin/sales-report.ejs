 <html>
    <body>
        
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">sales report </h2>
            
        </div>
        
    </div>
    <div class="card mb-4">
     

        <% if (response) { %>
         
      
        
        </header>
        <div class="card-body">
            <div class="table-responsive">
                <div class="table-responsive">
                    <table class="table align-middle table-nowrap mb-0" id="sales-report">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="text-center">
                                    <div class="form-check align-middle">
                                        <input class="form-check-input" type="checkbox" id="transactionCheck01">
                                        <label class="form-check-label" for="transactionCheck01"></label>
                                    </div>
                                </th>
                                <th class="align-middle" scope="col">Order ID</th>
                                <th class="align-middle" scope="col">Billing ID</th>
                                <th class="align-middle" scope="col">Date</th>
                                <th class="align-middle" scope="col">Total</th>
                                <th class="align-middle" scope="col">Payment Status</th>
                                <th class="align-middle" scope="col">Payment Method</th>
                                <th class="align-middle" scope="col">Product Count</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% response.data.forEach(element => { %>
                                <% let orderDate = element.date%> 
                                <% const [Date, Month, Year] = orderDate.toLocaleDateString().split('/') %> 
                                <% const dateNow =  Date + '-' + Month + '-' + Year%>
                             
                           
                            <tr>
                                <td class="text-center">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="transactionCheck02">
                                        <label class="form-check-label" for="transactionCheck02"></label>
                                    </div>
                                </td>
                                <td><a href="/admin/single-order/<%= element._id %>" class="fw-bold"><%= element._id %> </a> </td>
                                
                                <td><%= element.userId %> </td>
                                <td>
                                  <%= dateNow %> 
                                </td>
                                <td>
                                  â‚¹ <%= element.orderTotal %> 
                                </td>
                                <td>
                                    <span class="badge badge-pill badge-soft-success"><%= element.PaymentStatus %> </span>
                                </td>
                                <td>
                                    <i class="material-icons md-payment font-xxl text-muted mr-5"></i> <%= element.Payment %> 
                                </td>
                                <td>
                                  <%= element.product.length %> 
                                </td>
                            </tr>
                            <% }) %>
                            
                              </div>
                            
                        </tbody>
                    </table>
                </div>
            </div> <!-- table-responsive end// -->
        </div>
        <% } %>
    </div>
</section> <!-- content-main end// -->


<script>
$(document).ready(function() {
$('#sales-report').DataTable({
    bPaginate: false,
    searching: false,
    info: false,
    bFilter: false,
    bInfo: false,
    bLengthChange: false,
    dom: 'Bfrtip',
    buttons: [
        'csvHtml5',
        'pdfHtml5'
    ]
});
})
</script>

