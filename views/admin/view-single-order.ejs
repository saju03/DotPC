                            <tr>
                            
                                <td>
                                    <%= element.product.ProductName %>
                                </td>
                                    
                             <td><%= element.product.Price %> </td>
                                
                                </td>
                                <td>
                                <%= element.product.status %> 

                                </td>
                                <td>
