                                    <span class="badge badge-pill badge-soft-success"><%= element.PaymentStatus %> </span>
                                </td>
                                <td>
                                    <i class="material-icons md-payment font-xxl text-muted mr-5"></i> <%= element.Payment %> 
                                </td>
                                <td>
                                    to,<%= element.OrderAddress.name%>,<%= element.OrderAddress.mobile%>,<%= element.OrderAddress.place%>,<%= element.OrderAddress.pin%>
                                    </td>
                                    <td class="text-end">
                                        <a href="/admin/edit-order/<%=element._id%>/<%= element.product.productId %>" class="btn btn-md rounded font-sm">Edit</a>
                                    </td>
                             
                            </tr>
                            <% }) %>
                            
                              </div>
                              
                        </tbody>
                    </table>
                </div>
            </div> <!-- table-responsive end// -->
        </div>
        <% } %>
    </div>
</section> <!-- content-main end// -->



